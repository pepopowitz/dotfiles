{
  "workbench.colorTheme": "Feather",
  "workbench.colorCustomizations": {
    // "list.activeSelectionBackground": "#dddddd",
    // "list.activeSelectionForeground": "#395063",
    // "list.focusBackground": "#dddddd",
    // "list.highlightForeground": "#2f6f9f",
    // "list.hoverBackground": "#eeeeee",
    // "list.inactiveSelectionBackground": "#eeeeee",
    // "list.inactiveSelectionForeground": "#395063"
  },
  "editor.fontFamily": "'Office Code Pro', Menlo, Monaco, 'Courier New', monospace",
  "editor.tabSize": 2,
  "editor.minimap.enabled": false,
  "markdown-pdf.scale": 0.8,
  "window.title": "${rootName}${separator}${activeEditorMedium}",
  "prettier.singleQuote": true,
  "prettier.trailingComma": "es5",
  "ruby.rubocop.executePath": "/Users/stevenhicks/.asdf/shims/",
  "ruby.intellisense": "rubyLocate",
  "ruby.codeCompletion": "rcodetools",
  "ruby.format": "rubocop",
  "explorer.confirmDragAndDrop": false,
  "terminal.integrated.rendererType": "dom",
  "files.defaultLanguage": "markdown",
  "liveshare.featureSet": "insiders",
  "editor.gotoLocation.multiple": "goto",
  "workbench.tree.renderIndentGuides": "none",
  "terminal.integrated.fontWeight": "500",
  "breadcrumbs.enabled": true,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.accessibilitySupport": "off",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[ruby]": {
    "editor.defaultFormatter": "misogi.ruby-rubocop"
  },
  "editor.gotoLocation.multipleDeclarations": "goto",
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.gotoLocation.multipleImplementations": "goto",
  "editor.gotoLocation.multipleReferences": "goto",
  "editor.gotoLocation.multipleTypeDefinitions": "goto",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.codeActionsOnSave": { "source.fixAll": false },
  "journal.base": "~/_sjh/notes/foamington/daily",
  "vscodeMarkdownNotes.newNoteDirectory": "WORKSPACE_ROOT",
  "foam.openDailyNote.directory": "daily",
  "foam.openDailyNote.filenameFormat": "yyyy-mm-dd",
  "foam.openDailyNote.titleFormat": "mmmm d, yyyy (dddd)",
  "editor.wrappingIndent": "indent",
  "diffEditor.ignoreTrimWhitespace": false,
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "git.alwaysShowStagedChangesResourceGroup": true,
  "cSpell.userWords": ["performantly"],
  "screencastMode.onlyKeyboardShortcuts": true,
  "githubPullRequests.queries": [
    {
      "label": "Waiting For My Review",
      "query": "is:open review-requested:${user}"
    },
    {
      "label": "Assigned To Me",
      "query": "is:open assignee:${user}"
    },
    {
      "label": "Created By Me (open)",
      "query": "is:open author:${user}"
    },
    {
      "label": "Created By Me (all)",
      "query": "author:${user}"
    }
  ],
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.formatOnSave": true,
  "highlightLine.borderColor": "#395063",
  "highlightLine.borderWidth": "1px",
  "editor.renderLineHighlight": "all",
  "highlightLine.borderStyle": "inset",
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "jestrunner.disableCodeLens": true,
  "git.confirmSync": false,
  "workbench.sideBar.location": "right",
  "svg.preview.transparencyGrid": false,
  "svg.preview.boundingBox": true,
  "editor.inlineSuggest.enabled": true
}
